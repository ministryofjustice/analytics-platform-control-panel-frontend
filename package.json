{
  "name": "cpfrontend",
  "version": "0.1.0",
  "description": "Analytical Platform Control Panel frontend",
  "main": "./app/server.js",
  "scripts": {
    "start": "$([ \"x$NODE_RESTART\" == \"x0\" ] && echo node || echo nodemon ) ./app/server.js | bistre",
    "test": "mocha -C -R list --recursive --use_strict",
    "collect-static": "node ./bin/collect-static.js | bistre",
    "lint": "node node_modules/eslint/bin/eslint.js app || exit 0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ministryofjustice/analytics-platform-control-panel-frontend.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ministryofjustice/analytics-platform-control-panel-frontend/issues"
  },
  "homepage": "https://github.com/ministryofjustice/analytics-platform-control-panel-frontend#readme",
  "dependencies": {
    "auth0": "^2.9.1",
    "babel-core": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "bole": "3.0.2",
    "concat-files": "^0.1.1",
    "connect-ensure-login": "^0.1.1",
    "connect-redis": "^3.3.2",
    "continuation-local-storage": "^3.2.1",
    "cookie-parser": "^1.4.3",
    "dotenv": "^4.0.0",
    "express": "4.15.4",
    "express-session": "^1.15.6",
    "github": "^13.0.1",
    "glob": "^7.1.2",
    "govuk-elements-sass": "3.0.1",
    "govuk_frontend_toolkit": "7.0.0",
    "govuk_template_jinja": "0.22.1",
    "jquery": "^3.2.1",
    "jquery-typeahead": "^2.10.4",
    "morgan": "^1.9.0",
    "node-sass": "^4.5.3",
    "nunjucks": "3.0.1",
    "openid-client": "^1.19.0",
    "passport": "^0.4.0",
    "raven": "^2.2.1",
    "redis": "^2.8.0",
    "request": "^2.82.0",
    "request-promise": "^4.2.1",
    "request-promise-core": "^1.1.1",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "bistre": "1.0.1",
    "chai": "^4.1.2",
    "chai-spies": "^0.7.1",
    "eslint": "^4.11.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "mocha": "^3.5.3",
    "nock": "^9.0.20",
    "nodemon": "^1.11.0"
  },
  "nodemonConfig": {
    "ignore": [
      "test/",
      "static/"
    ],
    "watch": [
      "app/"
    ],
    "ext": "js json scss sass css html",
    "delay": "500",
    "verbose": true
  }
}
